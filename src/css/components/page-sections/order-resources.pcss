.order-form-fields {
  --contentRows: 0fr;
  --vertLineOpacity: 1;
  &.-open {
    --contentRows: 1fr;
    --vertLineOpacity: 0;
  }
  ._expander {
    display: grid;
    grid-template-rows: var(--contentRows);
    transition: grid-template-rows 0.3s var(--transitionSlowFastSlow);
    ._height {
      overflow: hidden;
      ._inner {
        @mixin pad-y 30px;
        > .inner {
          padding-top: 45px;
        }
      }
    }
  }
}
