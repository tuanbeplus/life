a {
  transition: color 0.2s;
  color: var(--brandTealSeaweed);
  &:hover {
    color: var(--brandTealHover);
  }
  &:active {
    color: var(--brandTealHover);
  }
  &.fg-secondary,
  &.fg-tertiary {
    &:hover {
      color: var(--brandOrange);
    }
    &:active {
      color: var(--brandOrange);
    }
  }
}

hr {
  border: 1px solid var(--colorVeryLightGrey);
  border-width: 1px 0 0 0;
  margin: 40px 0;
}

.contact-options {
  display: flex;
  flex-wrap: wrap;
  margin: 4px -16px -16px -16px;
  > li {
    padding: 16px;
  }
}


.modal-heading {
  font-size: clamp(30px, 3vw, 45px);
  font-weight: 700;
  margin-bottom: 0.6em;
  color: var(--brandTeal);
  line-height: 1;
  text-align: var(--langTextAlign);
  > span {
    display: inline-block;
    font-size: 18px;
    padding-left: 0;
    color: var(--colorBlack);
  }
}
